# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/moviemate_db

# ============================================
# JWT CONFIGURATION
# ============================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# TMDB API CONFIGURATION
# ============================================
TMDB_API_KEY=your-tmdb-api-key

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Trusted hosts (comma-separated, for production only)
# Example: TRUSTED_HOSTS=moviemate.com,api.moviemate.com
TRUSTED_HOSTS=

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Production frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# EMAIL CONFIGURATION (Optional - for password reset)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# MONITORING (Optional - for production)
# ============================================
SENTRY_DSN=
LOG_LEVEL=INFO
